<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment Id="CustomizationsFragment">
    <Property Id="Dummy_CustomizationsFragmentRefProp" Value="-"/>

    <PropertyRef Id="Dummy_DatabaseFragmentRefProperty"/>
    
    <Binary Id="InstallersDll" SourceFile="$(var.OutputPath)PersonMasterInstallers.CA.dll"/>
    
    <CustomAction Id="CA_CustomizePersonMasterDatabaseProperties" Execute="immediate" Script="vbscript">
      <![CDATA[
      Session.Property("DB_ENCRYPTIONKEYENABLED") = "True"
      Session.Property("DB_DOMAINENABLED") = "True"
      Session.Property("DB_APPINTEGRATEDSECURITYALLOWED") = "False"
      
      ]]>
    </CustomAction>

    <InstallUISequence>
      <Custom Action="CA_CustomizePersonMasterDatabaseProperties" Before="CostFinalize">1</Custom>
    </InstallUISequence>

  </Fragment>
</Wix>
