<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment Id="CustomizationsFragment">
    <Property Id="Dummy_CustomizationsFragmentRefProp" Value="-"/>

    <PropertyRef Id="Dummy_DatabaseFragmentRefProperty"/>

    <Binary Id="InstallersDll" SourceFile="$(var.OutputPath)InstallerLib.CA.dll"/>

    <CustomAction Id="CA_CustomizeDprUpdatesControlProperties" Execute="immediate" Script="vbscript">
      <![CDATA[
      Session.Property("WEB_CREATEWEB") = "False"
      Session.Property("DB_CREATEDATABASE") = "True"
      Session.Property("DB_ENCRYPTIONKEYENABLED") = "False"
      Session.Property("DB_DOMAINENABLED") = "False"
      Session.Property("DB_APPINTEGRATEDSECURITYALLOWED") = "False"
      ]]>
    </CustomAction>

    <CustomAction Id="CA_CustomizeDprDatabaseName" Execute="immediate" Property="DB_DATABASENAME" Value="DPR"/>

    <InstallUISequence>
      <Custom Action="CA_CustomizeDprUpdatesControlProperties" Before="CostFinalize">NOT REMOVE</Custom>
      <Custom Action="CA_CustomizeDprDatabaseName" After="CA_InitializeDatabasePropertiesFromProductName">1</Custom>
    </InstallUISequence>

    <InstallExecuteSequence>
      <Custom Action ="CA_CustomizeDprUpdatesControlProperties" After="CostFinalize">REMOVE</Custom>
    </InstallExecuteSequence>

  </Fragment>
</Wix>
